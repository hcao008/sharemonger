<p id="notice"><%= notice %></p>

<% if current_user.has_role? :seller %>
  <h1>Sales</h1>

  <div class="box panel panel-default">
    <div class="panel-body">
        <table>
          <thead>
            <tr>
              <th>Feedback rating</th>
              <th>Feedback comment</th>
              <th>Buyer</th>
              <th>Seller</th>
              <th>Item</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td><%= order.feedback_rating %></td>
                <td><%= order.feedback_comment %></td>
                <td><%= order.buyer_id %></td>
                <td><%= order.seller_id %></td>
                <td><%= order.item_id %></td>
                <td><%= link_to 'Show', order %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
  </div>
<% else %>
  <h1>Purchases</h1>
  <div class="box panel panel-default">
    <div class="panel-body">
        <table>
          <thead>
            <tr>
              <th>Feedback rating</th>
              <th>Feedback comment</th>
              <th>Buyer</th>
              <th>Seller</th>
              <th>Item</th>
              <th colspan="3"></th>
            </tr>
          </thead>

<tbody>
      <% @orders.each do |order| %>
            <tr>
              <td>
                <% if order.feedback_rating.present? %>
                  <%= order.feedback_rating %>
                <% else %>
                  <%= link_to "Leave Feedback", edit_order_path(order), class: "btn btn-primary" %>
                <% end %>
              </td>
              <td><%= order.feedback_comment %></td>
              <td><%= order.buyer_id %></td>
              <td><%= order.seller_id %></td>
              <td><%= order.item_id %></td>
              <td><%= link_to 'Show', order %></td>
            </tr>
            <% end %>
</tbody>
        </table>
      </div>
  </div>
<% end %>
